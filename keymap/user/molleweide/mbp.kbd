(defsrc
  esc  f1   f2   f3   f4   f5   f6   f7   f8   f9   f10  f11  f12
  grv  1    2    3    4    5    6    7    8    9    0    -    =    bspc
  tab  q    w    e    r    t    y    u    i    o    p    [    ]    \
  caps a    s    d    f    g    h    j    k    l    ;    '    ret
  grv  z    x    c    v    b    n    m    ,    .    /    rsft up
  fn   lctl lalt lmet           spc            rmet ralt left down rght
)

(defalias
  fn (around (layer-toggle function) fn)
  off (layer-switch off)

  ;; HOMEROW
  a (tap-next-release a lctl)
  s (tap-next-release s lsft)
  d (tap-next-release d lalt)
  f (tap-next-release f lmet)
  j (tap-next-release j rmet)
  k (tap-next-release k ralt)
  l (tap-next-release l rsft)
  ; (tap-next-release ; rctl)

  ;; THUMBS
  spc (tap-next-release spc @fn)

  ;; mv up below homerow
  sym (layer-toggle symbols)
  num (layer-toggle numbers)
)

(deflayer on
  _    brdn brup lp   mctl bldn blup prev pp   next mute vold volu
